{
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space"
  },
  "files": {
    "ignoreUnknown": true,
    "ignore": [
      "dist/",
      ".vercel/",
      ".astro/",
      "./public/*json",
      "./src/content/docs/book/coming_from_bash.md"
    ]
  }
}
